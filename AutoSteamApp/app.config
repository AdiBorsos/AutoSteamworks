<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Value in ms (1000ms = 1second) between the pushes of buttons-->
    <add key="DelayBetweenKeys" value="50"/>
    <!-- Value in ms (1000ms = 1second) between next read -->
    <add key="DelayBetweenCombo" value="50"/>
    <!-- Value can be True for AZERTY(QZD) keyboard or False for QUERTY(AWD) keyboard -->
    <add key="IsAzerty" value="false"/>

    <!-- Value can be True for logging everything, False for logging only errors -->
    <add key="IsLogEnabled" value="true"/>

    <!--Use the link below to find the key codes you want to use-->
    <!--Key Code Mapping = https://www.cambiaresearch.com/articles/15/javascript-char-codes-key-codes -->

    <!-- Use this to specify your preferred button sequence or whatever key combination that is different than AWD or QZD -->
    <!-- The value is support to be numbers split by , so: <add key="CustomButtonSequence" value="65,87,68" />  is equivalent to AWD -->
    <!-- Empty or INVALID value means it will use the normal AWD except when IsAzerty is true when it will use QZD -->
    <add key="CustomButtonSequence" value="2,h,as"/>
    <!-- 45 = insert-->
    <add key="keyCodeStart" value="36" />
    <!-- 27 = escape-->
    <add key="keyCodeStop" value="35" />
    <!-- System > Options > Controls > Keyboard Settings > Menu Control > "Use or Register Loadout / Cancel Animation" -->
    <!-- 88 = "X"-->
    <add key="keyCutsceneSkip" value="88" />
    <!-- Enable the usage of random pattern IF the tool can't find the real one or app is out of date -->
    <add key="UseRandomPattern" value="false" />
  </appSettings>
</configuration>
