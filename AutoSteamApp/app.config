<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    
    <!-- true will cause for more stuff to be printed to the screen.-->
    <add key="Debug" value="false" />
    
    <!-- Place where you want a log file created.-->
    <!-- If something goes wrong, this is what you would email to: ctdavies@ucalgary.ca -->
    <add key="LogFile" value="" />
    
    <!-- Value in ms (1000ms = 1second) between next read. -->
    <!-- Used when version is not supported due to being unable to synchronise with the game-->
    <add key="DelayBetweenCombo" value="50" />
    
    <!-- Value can be True for AZERTY(QZD) keyboard or False for QUERTY(AWD) keyboard -->
    <add key="IsAzerty" value="false" />
    
    <!--Use the link below to find the key code you want to use-->
    <!--Key Code Mapping = https://www.cambiaresearch.com/articles/15/javascript-char-codes-key-codes -->
    <!-- System > Options > Controls > Keyboard Settings > Menu Control > "Use or Register Loadout / Cancel Animation" -->
    <!-- 88 = "X"-->
    <add key="keyCutsceneSkip" value="88" />
    
  </appSettings>
</configuration>